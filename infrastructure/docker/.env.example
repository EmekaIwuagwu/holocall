# HoloCall Docker Environment Variables

# Database
DB_PASSWORD=holocall_secure_password_change_me

# Redis
REDIS_PASSWORD=redis_secure_password_change_me

# JWT Secrets
JWT_SECRET=jwt_secret_change_me_use_long_random_string
JWT_REFRESH_SECRET=jwt_refresh_secret_change_me_use_long_random_string

# TURN Server
TURN_SECRET=turn_static_auth_secret_change_me
PUBLIC_IP=127.0.0.1  # Replace with your public IP

# Grafana
GRAFANA_PASSWORD=admin_change_me

# App Configuration
NODE_ENV=production
LOG_LEVEL=info

# Mediasoup (SFU)
MEDIASOUP_WORKER_NUM=4
MEDIASOUP_RTC_MIN_PORT=10000
MEDIASOUP_RTC_MAX_PORT=10100

# CORS
CORS_ORIGIN=https://holocall.com

# Optional: Cloud Services
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET=holocall-recordings

# Optional: Monitoring
# SENTRY_DSN=
# DATADOG_API_KEY=
