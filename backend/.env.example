# Server Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# WebSocket Configuration
WS_PORT=8080
WS_PATH=/ws

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# TURN Server Configuration
TURN_SECRET=your-turn-static-auth-secret
TURN_SERVER_URL=turn:turn.holocall.com:3478
TURNS_SERVER_URL=turns:turn.holocall.com:5349
STUN_SERVER_URL=stun:stun.l.google.com:19302

# Database Configuration
DATABASE_URL=postgresql://holocall:password@localhost:5432/holocall
DB_HOST=localhost
DB_PORT=5432
DB_NAME=holocall
DB_USER=holocall
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Mediasoup (SFU) Configuration
MEDIASOUP_WORKER_NUM=4
MEDIASOUP_RTC_MIN_PORT=10000
MEDIASOUP_RTC_MAX_PORT=10100
MEDIASOUP_ANNOUNCED_IP=127.0.0.1

# CORS Configuration
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Room Configuration
MAX_ROOM_SIZE=10
DEFAULT_ROOM_SIZE=4
ROOM_CLEANUP_INTERVAL=300000

# Recording
RECORDING_ENABLED=false
RECORDING_PATH=/var/recordings
